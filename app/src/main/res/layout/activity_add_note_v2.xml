<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_note_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="orlevy.com.myproject.AddNoteV2">

    <EditText
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Title"
        android:ems="10"
        app:layout_editor_absoluteY="5dp"

        android:id="@+id/subjectV2"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="109dp"
        android:inputType="textPersonName"
        android:hint="Note"
        android:ems="10"
        android:id="@+id/NoteV2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/subjectV2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
